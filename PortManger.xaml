<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ORDU.PortManger">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="ui_remove_port"
                Text="关闭此端口"
                Clicked="Remove_port"
                HorizontalOptions="Center" />

            <Label
                HorizontalOptions="Center"
                Text="玩家列表"
                FontSize="24"/>

            <ListView x:Name="UI_Players_List"
                      HorizontalOptions="Center">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding .}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label
                Text="服务日志"
                HorizontalOptions="Center"
                FontSize="24"/>
            
            <Label
                x:Name="UI_Log"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>